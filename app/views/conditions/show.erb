<h1><%= @condition.date %></h1>

<div>
  <ul>
    <li>Condition: <%= @condition.date %></li>
    <li>Max Temperature: <%= @condition.max_temperature %></li>
    <li>Mean Temperature: <%= @condition.mean_temperature %></li>
    <li>Mean Temperature: <%= @condition.min_temperature %></li>
    <li>Mean Humidity: <%= @condition.mean_humidity %></li>
    <li>Mean Visibility: <%= @condition.mean_visibility %></li>
    <li>Mean Mean Wind Speed: <%= @condition.mean_wind_speed %></li>
    <li>Precipitation: <%= @condition.precipitation %></li>

  </ul>
</div>

<a class="btn btn-primary" href="/conditions">
  <i class="glyphicon glyphicon-circle-arrow-left"></i>
    Return</a><br>

<a class="btn btn-warning" href="/conditions/<%= @condition.id %>/edit">
  <i class="glyphicon glyphicon-pencil"></i>
    Edit</a><br>

<form action="/conditions/<%= @condition.id %>" class="delete-form" method="POST">
  <input name="_method" type="hidden" value="DELETE"/>
  <input class="btn btn-danger" type="submit" value="Delete"/>
</form>
