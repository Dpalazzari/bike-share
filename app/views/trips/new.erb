<h1>Create a Trip</h1>

<form action="/stations" method="POST">
  <div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      Starting Station
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
      <% @stations.each do |station| %>
      <li><%= station.name %></li>
      <% end %>
    </ul>
  </div>

  <div class="form-group">
    <label>Start Date:</label>
    <input type="text" name="trip[start_date]" class="form control" placeholder="Start Date"/><br>
  </div>


  <div class="form-group">
    <label>Installation Date:</label>
    <input type="date" name="station[installation_date]" class="form control"/><br>
  </div>

  <div class="form-group">
    <label>City:</label>
    <input type="text" name="city" class="form control" placeholder="San Jose, San Fransisco, Mountain View, Redwood City, or Palo Alto"/><br>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>

<script class="cssdeck" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.1.1/bootstrap.min.jss"></script>
